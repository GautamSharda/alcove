; Name that you wish to call your machine
name = machine

; ip/dns to use to connect to your machine via ssh.
ip = machine.company.com

; file/directory inclusion patterns, 
inclusionPatterns[] = ~

; file/directory exclusion patterns
exclusionPatterns[] = *.mp3
exclusionPatterns[] = Downloads/


; Describe the backup schedule
;   comma separated values are the days of the week, parenthesis is amount of designated days backed up.
;   pipe separates any number of schedules. after semi colon = time to backup.
;   Must be surrounded with quotes.
schedule = "0,1,2,3,4,5,6(7)|1(5);3:00"
